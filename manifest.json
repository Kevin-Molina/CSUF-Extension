{
  "name": "RMP",
  "description": "Work in Progress",
  "manifest_version": 2,
  "version": "0.8",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["jquery-3.2.1.min.js","bootstrap.min.js","background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Click me!"
  },
  "web_accessible_resources": ["bootstrap.min.css"]
}
